# stri2int example
LABEL reverse_from_ord
PUSHFRAME 
CREATEFRAME 
DEFVAR TF@input
POPS TF@input
	
	DEFVAR TF@ord
	DEFVAR TF@len
	STRLEN TF@len TF@input

	LABEL while123

		SUB TF@len TF@len int@1

